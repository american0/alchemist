<div class="banner-user" style="background-image: url(<%= image_path 'banner-profile.jpg' %>)">
  <%= image_tag current_user.avatar %>
  <h1><%=current_user.first_name + " " + current_user.last_name%></h1>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <div class="table-responsive">
        <h3>My bookings</h3>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Address</th>
              <th>Client</th>
              <th># of guest</th>
              <th>Amount invoiced</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
          <% @bookings.each do |f| %>
            <tr>
              <td><%= f.date %></td>
              <td><%= f.address %></td>
              <td><%= @users.find(f.user_id).first_name + " " + @users.find(f.user_id).last_name %></td>
              <td><%= f.guest %></td>
              <td><%= f.price %></td>
              <td>
                <%if f.accepted == true%>
                  <%="accepted"%>
                <%else%>
                  <%="not accepted"%>
                <%end%>
              </td>

              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>








